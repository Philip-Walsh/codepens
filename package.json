{
  "name": "codepens",
  "version": "1.0.0",
  "description": "Philip-Walsh Codepens: Interactive coding challenges and demos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node build.js",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html && npm run lint:python && npm run lint:md",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:python": "pylint scripts/*.py",
    "lint:md": "markdownlint \"**/*.md\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "lint:fix": "npm run format && npm run lint:js -- --fix && npm run lint:css -- --fix && npm run lint:md -- --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "jquery": "^3.7.1",
    "jquery-ui": "^1.13.2",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "htmlhint": "^1.1.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Philip-Walsh/codepens.git"
  },
  "keywords": [
    "Codpen",
    "challenges"
  ],
  "author": "Philip Walsh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Philip-Walsh/codepens/issues"
  },
  "homepage": "https://github.com/Philip-Walsh/codepens#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.html": [
      "prettier --write",
      "htmlhint"
    ],
    "*.py": [
      "pylint"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
